<%- model_class = @entry.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:hours) %>:</strong><br>
  <%= @entry.hours %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:task_id) %>:</strong><br>
  <%= @entry.task_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:timesheet_id) %>:</strong><br>
  <%= @entry.timesheet_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:description) %>:</strong><br>
  <%= @entry.description %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              entries_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_entry_path(@entry), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              entry_path(@entry),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
