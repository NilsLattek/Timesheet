<%= form_for @entry, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :hours, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :hours, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :task_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :task_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :timesheet_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :timesheet_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                entries_path, :class => 'btn' %>
  </div>
<% end %>
