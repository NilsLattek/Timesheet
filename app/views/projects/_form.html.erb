<%= form_for @project, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>

  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :start_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :start_date, :type => 'date' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :end_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :end_date, :type => 'date' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :remaining_effort, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :remaining_effort, :class => 'number_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :finished, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :finished, :class => 'check_box' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :users, :class => 'control-label' %>
    <div class="controls">
      <% for user in User.order('username') %>
        <label class="checkbox">
          <% if user.can_remove_user_from_project(@project) %>
            <%= check_box_tag "project[user_ids][]", user.id, @project.users.include?(user) %>
          <% else %>
            <%= check_box_tag "project[user_ids][]", user.id, @project.users.include?(user), :disabled => true %>
            <%= hidden_field_tag "project[user_ids][]", user.id %>
          <% end %>
          <%= user.username %>
        </label>
      <% end %>
      <%= hidden_field_tag "project[user_ids][]", "" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                projects_path, :class => 'btn' %>
  </div>
<% end %>
