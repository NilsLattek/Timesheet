<%- model_class = @task.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
  <%= @task.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:project_id) %>:</strong><br>
  <%= @task.project.name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:estimated_effort) %>:</strong><br>
  <%= @task.estimated_effort %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              project_path(@task.project), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_task_url(@task), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_task_path(@task),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
