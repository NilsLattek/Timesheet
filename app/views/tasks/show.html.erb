<%- model_class = @task.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<div class="row">
  <div class="col-md-6">
    <p>
      <strong><%= model_class.human_attribute_name(:name) %>:</strong><br>
      <%= @task.name %>
    </p>
  </div>
  <div class="col-md-6">
    <p>
      <strong><%= model_class.human_attribute_name(:project_id) %>:</strong><br>
      <%= @task.project.name %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <p>
      <strong><%= model_class.human_attribute_name(:estimated_effort) %>:</strong><br>
      <%= @task.estimated_effort %>
    </p>
  </div>
  <div class="col-md-6">
    <p>
      <strong><%= model_class.human_attribute_name(:actual_hours) %>:</strong><br>
      <%= @task.actual_hours %>
    </p>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <p>
      <strong><%= model_class.human_attribute_name(:finished) %>:</strong><br>
      <%=t @task.finished?.to_s %>
    </p>
  </div>
</div>

<p>
<strong><%=t '.title', :default => Entry.new.class.model_name.human.pluralize %>:</strong>
<%= render :partial => 'entries' %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              project_path(@task.project), :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_project_task_url(@task.project, @task), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              project_task_path(@task.project, @task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
